---
import { siteConfig } from '../data/site';
---

<section class="py-20 lg:py-32 bg-white border-b">
  <div class="container mx-auto px-4 text-center">
    <h1 class="text-4xl font-extrabold tracking-tight text-slate-900 sm:text-5xl md:text-6xl mb-6">
      {siteConfig.hero.title}
    </h1>
    <p class="mt-4 text-xl text-slate-600 max-w-3xl mx-auto mb-10">
      {siteConfig.hero.subtitle}
    </p>
    <div class="flex justify-center gap-4">
      <a href="#" class="inline-flex h-12 items-center justify-center rounded-md bg-indigo-600 px-8 text-base font-medium text-white shadow transition-colors hover:bg-indigo-700 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-indigo-600">
        {siteConfig.hero.cta}
      </a>
      <a href="#" class="inline-flex h-12 items-center justify-center rounded-md border border-slate-200 bg-white px-8 text-base font-medium text-slate-900 shadow-sm transition-colors hover:bg-slate-100 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-slate-950">
        Learn More
      </a>
    </div>
    
    <div class="mt-16 rounded-xl border bg-slate-50/50 p-2 shadow-sm lg:mt-24">
       <!-- Placeholder for hero image -->
       <div class="aspect-video w-full rounded-lg bg-slate-200/50 flex items-center justify-center text-slate-400">
          Hero Image Placeholder ({siteConfig.hero.image})
       </div>
    </div>
  </div>
</section>
