# =============================================================
# paas-core — Environment Variables
# =============================================================
# Copy this file to .env and fill in your values.
# =============================================================

# --- Database ---
DATABASE_URL=postgres://paas:paas@localhost:5432/paas?sslmode=disable

# --- Server ---
PORT=8080
BASE_URL=http://localhost:8080
APP_URL=http://localhost:3000

# --- Authentication ---
JWT_SECRET=change-me-in-production-use-a-long-random-string
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# --- CORS ---
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4321

# --- Xendit Billing ---
XENDIT_SECRET_KEY=
XENDIT_WEBHOOK_TOKEN=
XENDIT_CALLBACK_URL=http://localhost:8080/api/v1/webhooks/xendit
XENDIT_SUCCESS_REDIRECT=http://localhost:3000/billing?status=success
XENDIT_FAILURE_REDIRECT=http://localhost:3000/billing?status=failed

# --- Next.js Dashboard ---
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_APP_NAME=MyPaaS
NEXT_PUBLIC_AUTH_PROVIDER=local

# --- Supabase (optional — set SUPABASE_ENABLED=true to use) ---
SUPABASE_ENABLED=false
SUPABASE_URL=http://localhost:8000
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=
SUPABASE_JWT_SECRET=super-secret-jwt-token-with-at-least-32-characters-long
SUPABASE_DB_HOST=localhost
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=postgres
SUPABASE_DB_SSLMODE=disable
SUPABASE_WEBHOOK_SECRET=

# --- Supabase frontend (only needed when SUPABASE_ENABLED=true) ---
NEXT_PUBLIC_SUPABASE_URL=http://localhost:8000
NEXT_PUBLIC_SUPABASE_ANON_KEY=
