# =============================================================
# paas-boilerplate — Environment Variables
# =============================================================
# Copy this file to .env and fill in your values.
# docker compose reads .env automatically from the same directory.
# =============================================================

# --- Database ---
DATABASE_USER=paas
DATABASE_PASSWORD=paas
DATABASE_NAME=paas
DATABASE_PORT=5432

# --- Ports ---
API_PORT=8080
WEB_PORT=3000
SITE_PORT=4321
DOCS_PORT=3001

# --- App ---
APP_NAME=MyPaaS
APP_ENVIRONMENT=development

# --- Authentication (local mode) ---
JWT_SECRET=change-me-in-production-use-a-long-random-string

# --- CORS ---
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4321,http://localhost:3001

# --- Email ---
EMAIL_API_KEY=re_test
EMAIL_FROM=noreply@localhost

# --- Xendit Billing ---
XENDIT_SECRET_KEY=
XENDIT_WEBHOOK_TOKEN=

# --- OAuth ---
OAUTH_FRONTEND_URL=http://localhost:3000

# --- Frontend ---
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_APP_NAME=MyPaaS
NEXT_PUBLIC_AUTH_PROVIDER=local

# =============================================================
# Supabase (optional — set SUPABASE_ENABLED=true to use)
# Works with both Supabase Cloud and self-hosted community
# =============================================================
SUPABASE_ENABLED=false
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=
SUPABASE_JWT_SECRET=
SUPABASE_WEBHOOK_SECRET=

# Frontend Supabase (only when SUPABASE_ENABLED=true)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
